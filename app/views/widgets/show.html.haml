#slapping_start
  %span= link_to("Start slapping now !", "javascript:void(0);")
  
#slapping_info.hide
  %span Slap now as much as you can to feel better !
  
#slapping_timer.hide
  %span== <span>10.00</span> sec
    
#slapping_end.hide
  .spacer
  %p
    %strong
      Wonderslap!
    %br
    Please now submit your slap score!
    %br
  -#widget_votes_path(@widget)
  - form_tag "temp", :method => :post do
    %fieldset
      %p
        = label_tag :apology, "Get an apology"
        = check_box_tag :apology, true, :checked => true
      %p
        = label_tag :email, "Your email"
        = text_field_tag :email
      %p
        = label_tag :feedback, "Submit some feedback"
        = text_area_tag :feedback
      = submit_tag("Slap")

.spacer

%ul#slapped
  - @people.each do |person|
    %li
      %span.slapped_name= person.name
      %br
      %span.slapped_role= person.role
      .spacer
      = link_to(image_tag("http://xtrmweb.com/wp-content/uploads/10-REALITY_SLAP_L.jpg"), "javascript:void(0);", :class => :picture_to_slap)
      = link_to(image_tag("http://unrepentantoldhippie.files.wordpress.com/2008/12/slap-logo1.jpg"), "javascript:void(0);", :class => :slapped_picture)
      %br
      %span.slapped_counter 0
      .spacer
      %span.slapped_description= person.description
      
      
  